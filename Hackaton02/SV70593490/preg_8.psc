Proceso preg_8
	
	Definir a, b, c Como Real
	Definir Prom Como Entero
	
	Escribir "Ingresa primera nota"
	leer a
	
	Escribir "Ingresa segunda nota"
	leer b
	
	Escribir "Ingresa tercera nota"
	leer c
	
	Prom = (a + b + c)/3;
	
	Si Prom> 12.5 Entonces
		Escribir "El estudiante aprobo con un promedio de: ",Prom;
		
	SiNo
		Escribir "El estudiante no aprobo con un promedio de: ",Prom;
	FinSi
	
FinProceso
